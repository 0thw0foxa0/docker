FROM python:alpine  
# какой язык или иснструкцию мы пиздим с докерхаба 
# alpine тип самый мелкий, еще есть latest и просто циферками
WORKDIR /python-app
# папка куда мы сохраняем образ или где лежит сам dockerfile
COPY . .
# первая точка значит что я пизжу все файлы из локальной текущей папки
# вторая точка значит куда я пиздярю эти файлы и вторая точка равна путю из workdir
CMD ["python", "Main.py"]
# phyton получается интерпретатор мы запускаем
# main.py запускаем получается файл 